<%- include("partials/header") %>


<link rel="stylesheet" href="/bootstrap/films.css">
    <title>Films</title>
</head>

<body class="body">
    <nav class="mrs-navigation navbar navbar-expand-lg navbar-dark bg-dark ">
        <a class="mrs-brand navbar-brand" href="/">Reserved</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarToggle" aria-controls="navbarToggle" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarToggle">
            <ul class="mrs-navigation-list navbar-nav mr-auto">
                <li class="mrs-navigation-link nav-item active">
                    <a class="nav-link" href="/films">Films<span class="sr-only">(current)</span></a>
                </li>
                <li class="mrs-navigation-link mrs-navigation-link-reserve nav-item">
                    <a class="nav-link" href="/reservedSeats">Reserved<span class="sr-only"></span></a>
                </li>
                <li class="mrs-navigation-link mrs-navigation-link-reserve nav-item">
                    <a class="nav-link" href="reserve.html">Reserve Seats</a>
                </li>
            </ul>
            <section class="mrs-user navigation-link">
                <img class="mrs-user-avatar" src="/img/user-avatar.png">
                <span>John Smith</span>
            </section>
            <form class="mrs-nav-search form-inline my-2 my-lg-0" method="get" action="reserve.html">
                <input class="form-control mr-sm-2" type="search"  name="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-success my-2 my-sm-0" type="submit">Search</button>
            </form>
        </div>
    </nav>
    <main>
        <div class="mrs-films mrs-section container">
            <h2 class="mrs-films-title">Our Films</h2>
            <div id="mrs-films-list" class="mrs-films row">                
                <% films.forEach(function(film){ %>
                    <div class="mrs-film card col-lg-3 col-md-6">
                        <div class="mrs-film-img"><img class="mrs-film-img" src="<%= film.image %>"></div>
                        <div class="mrs-film-details container mx-1">
                            <h3 class="mrs-film-title"><%= film.title %></h3>
                                <div class="mrs-rating">
                                    <%= film.rating %>
                                </div>
                            <div class="mrs-film-tags">
                                <% var genres = film.genre.split(","); %>
                                <% genres.forEach(function(genre){ %>
                                    <span class="<%= genre.toLowerCase() %>"><%= genre %></span>
                                <% }) %>
                            </div>
                            <div class="mrs-film-info mrs-paragraph">
                                <p><%= film.description %></p>
                            </div>
                            <a class="mrs-film-reserve mrs-rounded-btn" href="/film/<%= film._id %>">Reserve</a>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </main>


<%- include("partials/footer") %>